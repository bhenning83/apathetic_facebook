<div class="prof-pic-box d-flex justify-content-center">
  <%= render 'users/profile_pic', { user: user } %>
  <% if user == current_user %>
    <%= link_to 'Edit', edit_user_registration_path(current_user), class: "edit-profile" %>
  <% end %>    
</div>
<div class="d-flex flex-column align-items-center">
  <h1 class="mx-4"><%= user.name %></h1>
  <% if friends.include?(user) || user == current_user %>
    <h5><%= user.email %></h5>
  <% end %>
</div>
