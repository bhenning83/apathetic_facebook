<% if post.likes.any? %>
  <% if post.likes.size == 1 %>
    <em><%= liker(post).name %> thinks this is okay.</em>
  <% else %>
    <em><%= post.likes.size %> think this is fine.</em>
  <% end %>
<% else %>
  <em>0 people think this is cool</em>
<% end %>

<% if already_liked?(post) %>
  <%= link_to 'Never mind', like_path(current_like(post).id), method: 'delete' %>
<% else %>
  <%= link_to "Fine", likes_path(post: post), method: 'post' %>
<% end %>
