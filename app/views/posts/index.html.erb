<div class="row">
  <div class="col-12 col-xl-4 my-2 my-xl-4 d-flex flex-column align-items-center d-lg-block">
    <%= render 'users/profile_left', { user: current_user, friends: [1] } %>
  </div>

  <div class="col-12 col-xl-5 mt-4 d-flex flex-column align-items-center d-lg-block">
    <div class="w-100">
      <div class="mt-3"><%= render 'new_post' %></div>
      <% if @posts.any? %>
        <%= render 'shared/feed', { posts: @posts, friends: @friends }%>
      <% end %>
    </div>
  </div>
  <div class="col-12 col-xl-3 mt-xl-4">
    <h3>Your So-Called Friends:</h3>
    <% if @friends_list.any? %>
      <% @friends_list.each do |f| %>
        <%= render 'users/user_thumb', { user: f, date: nil } %>
      <% end %>
    <% else %>
      <p>Yikes. It's more lonely in here than Chris McCandless's bus. Better get on that:</p>
      <%= link_to "Find a friend", users_path %>
    <% end %>
  <hr>
  </div>
</div>